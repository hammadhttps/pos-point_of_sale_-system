            <Label prefHeight="39.0" prefWidth="175.0" text="Select a category to view items" />
        </VBox>
    </ScrollPane>
   <Pane fx:id="bill" layoutX="514.0" layoutY="27.0" prefHeight="705.0" prefWidth="722.0" visible="false" />

