<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
           prefHeight="800.0" prefWidth="1400.0" 
           styleClass="pos-container" 
           stylesheets="@pos-theme.css" 
           xmlns="http://javafx.com/javafx/17.0.12" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="controller.second_page_controller">

    <!-- Background with gradient -->
    <Rectangle width="1400" height="800" fill="linear-gradient(to bottom right, #3b82f6, #1e40af)" />

    <!-- Main Content Container -->
    <VBox alignment="CENTER" spacing="40" maxWidth="1200">
        
        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="16">
            <HBox alignment="CENTER" spacing="16">
                <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true">
                    <image>
                        <Image url="@icons_and_images/pos_icon.png" />
                    </image>
                </ImageView>
                <Label text="POS SYSTEM" styleClass="title-xl" style="-fx-text-fill: white;" />
            </HBox>
            <Label text="Point of Sale Management System" styleClass="body-lg" style="-fx-text-fill: rgba(255,255,255,0.9);" />
        </VBox>

        <!-- Login Options Grid -->
        <GridPane hgap="24" vgap="24" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="280" prefWidth="280" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="280" prefWidth="280" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" minHeight="200" prefHeight="200" />
                <RowConstraints vgrow="SOMETIMES" minHeight="200" prefHeight="200" />
            </rowConstraints>

            <!-- Super Admin Card -->
            <VBox styleClass="pos-card-hover" alignment="CENTER" spacing="16" 
                   onMouseClicked="#sa_action" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true" styleClass="dashboard-icon">
                    <image>
                        <Image url="@icons_and_images/administrator-icon.png" />
                    </image>
                </ImageView>
                <Label text="Super Admin" styleClass="title-sm" />
                <Label text="System Administration" styleClass="body-sm" />
                <Button fx:id="sa_btn" text="Login" styleClass="btn-primary" onAction="#sa_action" />
            </VBox>

            <!-- Branch Manager Card -->
            <VBox styleClass="pos-card-hover" alignment="CENTER" spacing="16" 
                   onMouseClicked="#bm_action" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true" styleClass="dashboard-icon">
                    <image>
                        <Image url="@icons_and_images/Manager-icon.png" />
                    </image>
                </ImageView>
                <Label text="Branch Manager" styleClass="title-sm" />
                <Label text="Branch Operations" styleClass="body-sm" />
                <Button fx:id="bm_btn" text="Login" styleClass="btn-primary" onAction="#bm_action" />
            </VBox>

            <!-- Cashier Card -->
            <VBox styleClass="pos-card-hover" alignment="CENTER" spacing="16" 
                   onMouseClicked="#csh_action" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true" styleClass="dashboard-icon">
                    <image>
                        <Image url="@icons_and_images/clerk.png" />
                    </image>
                </ImageView>
                <Label text="Cashier" styleClass="title-sm" />
                <Label text="Sales Transactions" styleClass="body-sm" />
                <Button fx:id="csh_btn" text="Login" styleClass="btn-primary" onAction="#csh_action" />
            </VBox>

            <!-- Data Entry Operator Card -->
            <VBox styleClass="pos-card-hover" alignment="CENTER" spacing="16" 
                   onMouseClicked="#data_btn" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true" styleClass="dashboard-icon">
                    <image>
                        <Image url="@icons_and_images/images (1).png" />
                    </image>
                </ImageView>
                <Label text="Data Entry Operator" styleClass="title-sm" />
                <Label text="Inventory Management" styleClass="body-sm" />
                <Button fx:id="data_btn" text="Login" styleClass="btn-primary" onAction="#data_btn" />
            </VBox>
        </GridPane>

        <!-- Footer -->
        <HBox alignment="CENTER" spacing="16">
            <Button fx:id="cancel_btn" text="Exit System" styleClass="btn-outline" onAction="#cance_action" />
        </HBox>
    </VBox>

    <!-- Version Info -->
    <VBox alignment="BOTTOM_RIGHT" spacing="4" StackPane.alignment="BOTTOM_RIGHT" 
          style="-fx-padding: 24px;">
        <Label text="Version 2.1.0" styleClass="caption" style="-fx-text-fill: rgba(255,255,255,0.5);" />
        <Label text="Â© 2024 POS System" styleClass="caption" style="-fx-text-fill: rgba(255,255,255,0.5);" />
    </VBox>
</StackPane>
