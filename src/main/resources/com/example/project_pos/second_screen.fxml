<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
           prefHeight="800.0" prefWidth="1400.0" 
           styleClass="container" 
           stylesheets="@modern-ui.css" 
           xmlns="http://javafx.com/javafx/17.0.12" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="controller.second_page_controller">

    <!-- Background with gradient -->
    <Rectangle width="1400" height="800" fill="linear-gradient(to bottom right, #3b82f6, #1e40af)" />

    <!-- Main Content Container -->
    <VBox alignment="CENTER" spacing="40" maxWidth="1200">
        
        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="16">
            <HBox alignment="CENTER" spacing="16">
                <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true">
                    <image>
                        <Image url="@icons_and_images/pos_icon.png" />
                    </image>
                </ImageView>
                <Label text="POS SYSTEM" styleClass="title-large" style="-fx-text-fill: white;" />
            </HBox>
            <Label text="Point of Sale Management System" styleClass="body-text" style="-fx-text-fill: rgba(255,255,255,0.9);" />
        </VBox>

        <!-- Login Options Grid -->
        <GridPane hgap="24" vgap="24" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="280" prefWidth="280" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="280" prefWidth="280" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" minHeight="200" prefHeight="200" />
                <RowConstraints vgrow="SOMETIMES" minHeight="200" prefHeight="200" />
            </rowConstraints>

            <!-- Super Admin Card -->
            <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                   onMouseClicked="#sa_action" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true" styleClass="dashboard-icon">
                    <image>
                        <Image url="@icons_and_images/administrator-icon.png" />
                    </image>
                </ImageView>
                <Label text="Super Admin" styleClass="title-small" />
                <Label text="System Administration" styleClass="caption-text" />
                <Button fx:id="sa_btn" text="Login" styleClass="btn-primary" onAction="#sa_action" />
            </VBox>

            <!-- Branch Manager Card -->
            <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                   onMouseClicked="#bm_action" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true" styleClass="dashboard-icon">
                    <image>
                        <Image url="@icons_and_images/Manager-icon.png" />
                    </image>
                </ImageView>
                <Label text="Branch Manager" styleClass="title-small" />
                <Label text="Branch Operations" styleClass="caption-text" />
                <Button fx:id="bm_btn" text="Login" styleClass="btn-primary" onAction="#bm_action" />
            </VBox>

            <!-- Cashier Card -->
            <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                   onMouseClicked="#csh_action" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true" styleClass="dashboard-icon">
                    <image>
                        <Image url="@icons_and_images/clerk.png" />
                    </image>
                </ImageView>
                <Label text="Cashier" styleClass="title-small" />
                <Label text="Sales  Transactions" styleClass="caption-text" />
                <Button fx:id="csh_btn" text="Login" styleClass="btn-primary" onAction="#csh_action" />
            </VBox>

            <!-- Data Entry Operator Card -->
            <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                   onMouseClicked="#data_btn" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true" styleClass="dashboard-icon">
                    <image>
                        <Image url="@icons_and_images/images (1).png" />
                    </image>
                </ImageView>
                <Label text="Data Entry Operator" styleClass="title-small" />
                <Label text="Inventory Management" styleClass="caption-text" />
                <Button fx:id="data_btn" text="Login" styleClass="btn-primary" onAction="#data_btn" />
            </VBox>
        </GridPane>

        <!-- Footer -->
        <HBox alignment="CENTER" spacing="16">
            <Button fx:id="cancel_btn" text="Exit System" styleClass="btn-outline" onAction="#cance_action" />
        </HBox>
    </VBox>

    <!-- Side Navigation Panel (Hidden by default, can be toggled) -->
   <VBox fx:id="sidePanel" styleClass="sidebar" visible="false" 
       alignment="TOP_RIGHT" prefWidth="300">
    <VBox spacing="16" style="-fx-padding: 20;">
        <Label text="Navigation" styleClass="title-small" style="-fx-text-fill: white;" />
        <Separator style="-fx-background-color: rgba(255,255,255,0.2);" />
        <Button text="Home" styleClass="nav-item" style="-fx-text-fill: white;" />
        <Button text="Settings" styleClass="nav-item" style="-fx-text-fill: white;" />
        <Button text="Help" styleClass="nav-item" style="-fx-text-fill: white;" />
    </VBox>
</VBox>
</StackPane>
