<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="800.0" prefWidth="1400.0" 
            styleClass="pos-container" 
            stylesheets="@pos-theme.css" 
            xmlns="http://javafx.com/javafx/17.0.12" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.second_page_controller">

    <!-- Main Content -->
    <center>
        <StackPane>
            <!-- Background -->
            <Rectangle width="1400" height="800" fill="linear-gradient(to bottom right, #1e293b, #0f172a)" />

            <!-- Content Container -->
            <VBox alignment="CENTER" spacing="48" maxWidth="1000">
                
                <!-- Header Section -->
                <VBox alignment="CENTER" spacing="24">
                    <HBox alignment="CENTER" spacing="20">
                        <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true">
                            <image>
                                <Image url="@icons_and_images/pos_icon.png" />
                            </image>
                        </ImageView>
                        <VBox alignment="CENTER_LEFT" spacing="8">
                            <Label text="POS SYSTEM" styleClass="title-xl" style="-fx-text-fill: white;" />
                            <Label text="Professional Point of Sale Management" styleClass="body-lg" style="-fx-text-fill: rgba(255,255,255,0.8);" />
                        </VBox>
                    </HBox>
                    <Label text="Choose your role to access the system" styleClass="body-md" style="-fx-text-fill: rgba(255,255,255,0.7);" />
                </VBox>

                <!-- Role Selection Grid -->
                <GridPane hgap="32" vgap="32" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="280" prefWidth="280" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="280" prefWidth="280" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" minHeight="220" prefHeight="220" />
                        <RowConstraints vgrow="SOMETIMES" minHeight="220" prefHeight="220" />
                    </rowConstraints>

                    <!-- Super Admin Card -->
                    <VBox styleClass="pos-card-hover" alignment="CENTER" spacing="20" 
                           onMouseClicked="#sa_action" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true">
                            <image>
                                <Image url="@icons_and_images/administrator-icon.png" />
                            </image>
                        </ImageView>
                        <VBox alignment="CENTER" spacing="8">
                            <Label text="Super Admin" styleClass="title-md" />
                            <Label text="System Administration" styleClass="body-md" />
                            <Label text="• Manage all branches" styleClass="body-sm" />
                            <Label text="• Create managers" styleClass="body-sm" />
                            <Label text="• System reports" styleClass="body-sm" />
                        </VBox>
                        <Button text="Access Admin Panel" styleClass="btn-primary btn-lg" onAction="#sa_action" />
                    </VBox>

                    <!-- Branch Manager Card -->
                    <VBox styleClass="pos-card-hover" alignment="CENTER" spacing="20" 
                           onMouseClicked="#bm_action" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true">
                            <image>
                                <Image url="@icons_and_images/Manager-icon.png" />
                            </image>
                        </ImageView>
                        <VBox alignment="CENTER" spacing="8">
                            <Label text="Branch Manager" styleClass="title-md" />
                            <Label text="Branch Operations" styleClass="body-md" />
                            <Label text="• Manage staff" styleClass="body-sm" />
                            <Label text="• Branch reports" styleClass="body-sm" />
                            <Label text="• Staff passwords" styleClass="body-sm" />
                        </VBox>
                        <Button text="Access Manager Panel" styleClass="btn-primary btn-lg" onAction="#bm_action" />
                    </VBox>

                    <!-- Cashier Card -->
                    <VBox styleClass="pos-card-hover" alignment="CENTER" spacing="20" 
                           onMouseClicked="#csh_action" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true">
                            <image>
                                <Image url="@icons_and_images/clerk.png" />
                            </image>
                        </ImageView>
                        <VBox alignment="CENTER" spacing="8">
                            <Label text="Cashier" styleClass="title-md" />
                            <Label text="Sales Transactions" styleClass="body-md" />
                            <Label text="• Process sales" styleClass="body-sm" />
                            <Label text="• Handle payments" styleClass="body-sm" />
                            <Label text="• Customer service" styleClass="body-sm" />
                        </VBox>
                        <Button text="Start Selling" styleClass="btn-success btn-lg" onAction="#csh_action" />
                    </VBox>

                    <!-- Data Entry Operator Card -->
                    <VBox styleClass="pos-card-hover" alignment="CENTER" spacing="20" 
                           onMouseClicked="#data_btn" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true">
                            <image>
                                <Image url="@icons_and_images/images (1).png" />
                            </image>
                        </ImageView>
                        <VBox alignment="CENTER" spacing="8">
                            <Label text="Data Entry Operator" styleClass="title-md" />
                            <Label text="Inventory Management" styleClass="body-md" />
                            <Label text="• Add products" styleClass="body-sm" />
                            <Label text="• Manage vendors" styleClass="body-sm" />
                            <Label text="• Update inventory" styleClass="body-sm" />
                        </VBox>
                        <Button text="Manage Inventory" styleClass="btn-warning btn-lg" onAction="#data_btn" />
                    </VBox>
                </GridPane>

                <!-- System Status -->
                <HBox alignment="CENTER" spacing="24" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 12px; -fx-padding: 16px 24px;">
                    <VBox alignment="CENTER" spacing="4">
                        <Label text="System Status" styleClass="body-sm" style="-fx-text-fill: rgba(255,255,255,0.7);" />
                        <HBox alignment="CENTER" spacing="8">
                            <Circle styleClass="status-online" radius="4" />
                            <Label text="Online" styleClass="body-md" style="-fx-text-fill: white; -fx-font-weight: 600;" />
                        </HBox>
                    </VBox>
                    
                    <Separator orientation="VERTICAL" style="-fx-background-color: rgba(255,255,255,0.3);" />
                    
                    <VBox alignment="CENTER" spacing="4">
                        <Label text="Active Branches" styleClass="body-sm" style="-fx-text-fill: rgba(255,255,255,0.7);" />
                        <Label text="8" styleClass="title-sm" style="-fx-text-fill: white;" />
                    </VBox>
                    
                    <Separator orientation="VERTICAL" style="-fx-background-color: rgba(255,255,255,0.3);" />
                    
                    <VBox alignment="CENTER" spacing="4">
                        <Label text="Today's Sales" styleClass="body-sm" style="-fx-text-fill: rgba(255,255,255,0.7);" />
                        <Label text="$12,450" styleClass="title-sm" style="-fx-text-fill: white;" />
                    </VBox>
                </HBox>

                <!-- Footer Actions -->
                <HBox alignment="CENTER" spacing="16">
                    <Button fx:id="cancel_btn" text="Exit System" styleClass="btn-outline" 
                            style="-fx-text-fill: white; -fx-border-color: white;" onAction="#cance_action" />
                    <Button text="System Help" styleClass="btn-ghost" 
                            style="-fx-text-fill: rgba(255,255,255,0.8);" />
                </HBox>
            </VBox>

            <!-- Version Info -->
            <VBox alignment="BOTTOM_RIGHT" spacing="4" StackPane.alignment="BOTTOM_RIGHT" 
                  style="-fx-padding: 24px;">
                <Label text="Version 2.1.0" styleClass="caption" style="-fx-text-fill: rgba(255,255,255,0.5);" />
                <Label text="© 2024 POS System" styleClass="caption" style="-fx-text-fill: rgba(255,255,255,0.5);" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>