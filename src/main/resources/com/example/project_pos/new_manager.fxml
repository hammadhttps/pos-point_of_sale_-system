<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>

<BorderPane prefHeight="800.0" prefWidth="1400.0" 
            styleClass="container" 
            stylesheets="@modern-ui.css" 
            xmlns="http://javafx.com/javafx/17.0.12" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.NewManager">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="card" alignment="CENTER_LEFT" spacing="20" padding="16">
            <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                <image>
                    <Image url="@icons_and_images/pos_icon.png" />
                </image>
            </ImageView>
            <Label text="Add Branch Manager" styleClass="title-medium" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Back" styleClass="btn-outline" onAction="#handleBack" />
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox alignment="CENTER" spacing="32" padding="32" maxWidth="600">
                
                <!-- Form Card -->
                <VBox styleClass="card" spacing="24" maxWidth="500">
                    
                    <!-- Header -->
                    <VBox spacing="16" alignment="CENTER">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true">
                            <image>
                                <Image url="@icons_and_images/Manager-icon.png" />
                            </image>
                        </ImageView>
                        <Label text="Add Branch Manager" styleClass="title-medium" />
                        <Label text="Create a new branch manager account" styleClass="body-text" />
                    </VBox>

                    <!-- Form Fields -->
                    <GridPane hgap="20" vgap="16" alignment="CENTER">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="250" prefWidth="250" />
                        </columnConstraints>

                        <!-- Username -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Username *" styleClass="form-label" />
                            <TextField fx:id="usernameField" promptText="Enter username" styleClass="form-field" />
                        </VBox>

                        <!-- Full Name -->
                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Full Name *" styleClass="form-label" />
                            <TextField fx:id="nameField" promptText="Enter full name" styleClass="form-field" />
                        </VBox>

                        <!-- Email -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Email Address *" styleClass="form-label" />
                            <TextField fx:id="emailField" promptText="Enter email address" styleClass="form-field" />
                        </VBox>

                        <!-- Phone -->
                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="Phone Number" styleClass="form-label" />
                            <TextField fx:id="phoneField" promptText="Enter phone number" styleClass="form-field" />
                        </VBox>

                        <!-- Password -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <Label text="Password *" styleClass="form-label" />
                            <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="form-field" />
                        </VBox>

                        <!-- Confirm Password -->
                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <Label text="Confirm Password *" styleClass="form-label" />
                            <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" styleClass="form-field" />
                        </VBox>

                        <!-- Branch Assignment -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <Label text="Branch Assignment *" styleClass="form-label" />
                            <ComboBox fx:id="branchCodeField" promptText="Select branch" styleClass="form-field">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Operations" />
                                        <String fx:value="Sales" />
                                        <String fx:value="Finance" />
                                        <String fx:value="Human Resources" />
                                        <String fx:value="IT" />
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>

                        <!-- Salary -->
                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <Label text="Salary *" styleClass="form-label" />
                            <TextField fx:id="salaryField" promptText="Enter salary amount" styleClass="form-field" />
                        </VBox>

                        <!-- Department -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="4">
                            <Label text="Department" styleClass="form-label" />
                            <ComboBox fx:id="departmentComboBox" promptText="Select department" styleClass="form-field">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Operations" />
                                        <String fx:value="Sales" />
                                        <String fx:value="Finance" />
                                        <String fx:value="Human Resources" />
                                        <String fx:value="IT" />
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>

                        <!-- Manager Level -->
                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <Label text="Manager Level" styleClass="form-label" />
                            <ComboBox fx:id="levelComboBox" promptText="Select level" styleClass="form-field">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Junior Manager" />
                                        <String fx:value="Senior Manager" />
                                        <String fx:value="Department Head" />
                                        <String fx:value="Assistant Director" />
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>

                        <!-- Account Status -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">
                            <Label text="Account Status" styleClass="form-label" />
                            <HBox spacing="16">
                                <RadioButton fx:id="activeRadio" text="Active" selected="true" />
                                <RadioButton fx:id="inactiveRadio" text="Inactive" />
                            </HBox>
                        </VBox>
                    </GridPane>

                    <!-- Action Buttons -->
                    <HBox spacing="16" alignment="CENTER">
                        <Button text="Add Manager" styleClass="btn-primary" onAction="#addManagerAction" />
                        <Button text="Clear Form" styleClass="btn-secondary" onAction="#handleClearForm" />
                        <Button text="Cancel" styleClass="btn-outline" onAction="#handleCancel" />
                    </HBox>
                </VBox>

                <!-- Information Card -->
                <VBox styleClass="card" spacing="16">
                    <Label text="Important Information" styleClass="title-small" />
                    <VBox spacing="8">
                        <HBox spacing="8">
                            <Label text="•" styleClass="caption-text" />
                            <Label text="Username must be unique across the system" styleClass="body-text" />
                        </HBox>
                        <HBox spacing="8">
                            <Label text="•" styleClass="caption-text" />
                            <Label text="Password should be at least 8 characters long" styleClass="body-text" />
                        </HBox>
                        <HBox spacing="8">
                            <Label text="•" styleClass="caption-text" />
                            <Label text="Email will be used for password recovery" styleClass="body-text" />
                        </HBox>
                        <HBox spacing="8">
                            <Label text="•" styleClass="caption-text" />
                            <Label text="Branch assignment can be changed later" styleClass="body-text" />
                        </HBox>
                        <HBox spacing="8">
                            <Label text="•" styleClass="caption-text" />
                            <Label text="Salary should be entered as a number only" styleClass="body-text" />
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox styleClass="card" alignment="CENTER_LEFT" spacing="16" padding="12">
            <Label text="Status:" styleClass="form-label" />
            <Label text="Ready to add manager" styleClass="body-text" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="* Required fields" styleClass="caption-text" />
        </HBox>
    </bottom>
</BorderPane>
