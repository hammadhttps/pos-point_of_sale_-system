<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="445.0" prefWidth="704.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NewManager">
    <VBox alignment="CENTER" layoutY="-2.0" prefHeight="445.0" prefWidth="704.0" spacing="20">


        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Add Branch Manager" />


        <GridPane alignment="CENTER" hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="150" />
                <ColumnConstraints halignment="LEFT" prefWidth="300" />
            </columnConstraints>

            <!-- Username -->
            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="usernameField" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- Name -->
            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!-- Email -->
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" promptText="Enter email address" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Password -->
            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <!-- Branch Code -->
            <Label text="Branch Code:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="branchCodeField" promptText="Enter branch code" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <!-- Salary -->
            <Label text="Salary:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="salaryField" promptText="Enter salary" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>


        <Button fx:id="addManagerButton" onAction="#addManagerAction" prefHeight="30.0" prefWidth="134.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Add" />
    </VBox>
</AnchorPane>
