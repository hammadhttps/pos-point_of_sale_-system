<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<!-- Reusable Login Template -->
<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
           prefHeight="800.0" prefWidth="1400.0" 
           styleClass="pos-container" 
           stylesheets="@pos-theme.css" 
           xmlns="http://javafx.com/javafx/17.0.12" 
           xmlns:fx="http://javafx.com/fxml/1">

    <!-- Background -->
    <Rectangle width="1400" height="800" fill="linear-gradient(to bottom right, #1e293b, #0f172a)" />

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="40" maxWidth="500">
        
        <!-- Login Card -->
        <VBox styleClass="pos-card" alignment="CENTER" spacing="32" maxWidth="400">
            
            <!-- Header -->
            <VBox alignment="CENTER" spacing="16">
                <ImageView fx:id="roleIcon" fitHeight="80.0" fitWidth="80.0" preserveRatio="true" />
                <Label fx:id="loginTitle" text="Login" styleClass="title-lg" />
                <Label fx:id="loginSubtitle" text="Access your account" styleClass="body-md" />
            </VBox>

            <!-- Login Form -->
            <VBox spacing="20" maxWidth="320">
                
                <!-- Username Field -->
                <VBox spacing="8">
                    <Label text="Username" styleClass="form-label" />
                    <TextField fx:id="username" promptText="Enter your username" styleClass="form-field" />
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" styleClass="form-label" />
                    <PasswordField fx:id="password" promptText="Enter your password" styleClass="form-field" />
                </VBox>

                <!-- Remember Me -->
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <CheckBox fx:id="rememberMe" text="Remember me" styleClass="body-sm" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label text="Forgot password?" styleClass="body-sm" style="-fx-text-fill: #3b82f6; -fx-cursor: hand;" />
                </HBox>

                <!-- Login Button -->
                <Button fx:id="loginButton" text="Sign In" styleClass="btn-primary btn-lg w-full" />
            </VBox>

            <!-- Footer -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="Need help?" styleClass="body-sm" />
                <Label fx:id="helpText" text="Contact your administrator" styleClass="caption" />
            </VBox>
        </VBox>

        <!-- Back to Home Button -->
        <Button text="â† Back to Home" styleClass="btn-outline" 
                style="-fx-text-fill: white; -fx-border-color: white;" />
    </VBox>

    <!-- Loading Overlay -->
    <VBox fx:id="loadingOverlay" styleClass="loading-overlay" visible="false" 
           alignment="CENTER">
        <VBox styleClass="pos-card" alignment="CENTER" spacing="16" maxWidth="200">
            <ProgressIndicator styleClass="loading-spinner" />
            <Label text="Authenticating..." styleClass="body-md" />
        </VBox>
    </VBox>
</StackPane>