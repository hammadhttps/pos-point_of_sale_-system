<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800.0" prefWidth="1400.0" 
            styleClass="container" 
            stylesheets="@modern-ui.css" 
            xmlns="http://javafx.com/javafx/17.0.12" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.DataEntryOperator_controller">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="card" alignment="CENTER_LEFT" spacing="20" padding="16">
            <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                <image>
                    <Image url="@icons_and_images/pos_icon.png" />
                </image>
            </ImageView>
            <Label text="Data Entry Operator Dashboard" styleClass="title-medium" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Welcome, Data Entry Operator" styleClass="body-text" />
            <Button text="Logout" styleClass="btn-outline" onAction="#cancel" />
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox spacing="32" padding="32" maxWidth="1200">
                
                <!-- Welcome Section -->
                <VBox spacing="16" alignment="CENTER">
                    <Label text="Welcome, Data Entry Operator" styleClass="title-large" />
                    <Label text="Manage inventory, vendors, and product data" styleClass="body-text" />
                </VBox>

                <!-- Dashboard Cards Grid -->
                <GridPane hgap="24" vgap="24" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300" prefWidth="300" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300" prefWidth="300" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300" prefWidth="300" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" minHeight="200" prefHeight="200" />
                        <RowConstraints vgrow="SOMETIMES" minHeight="200" prefHeight="200" />
                    </rowConstraints>

                    <!-- Vendors Management Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           onMouseClicked="#show_vendors" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/vendors.png" />
                            </image>
                        </ImageView>
                        <Label text="Vendors Management" styleClass="title-small" />
                        <Label text="Manage vendor information and relationships" styleClass="caption-text" />
                        <Button text="Manage Vendors" styleClass="btn-primary" onAction="#show_vendors" />
                    </VBox>

                    <!-- Add New Product Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           onMouseClicked="#add_new_product" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/add-to-cart.png" />
                            </image>
                        </ImageView>
                        <Label text="Add New Product" styleClass="title-small" />
                        <Label text="Add products to the inventory system" styleClass="caption-text" />
                        <Button text="Add Product" styleClass="btn-primary" onAction="#add_new_product" />
                    </VBox>

                    <!-- Add New Vendor Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           onMouseClicked="#add_new_vendor" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/add_new_vendor.png" />
                            </image>
                        </ImageView>
                        <Label text="Add New Vendor" styleClass="title-small" />
                        <Label text="Register new vendors in the system" styleClass="caption-text" />
                        <Button text="Add Vendor" styleClass="btn-primary" onAction="#add_new_vendor" />
                    </VBox>

                    <!-- Inventory Management Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/download.png" />
                            </image>
                        </ImageView>
                        <Label text="Inventory Management" styleClass="title-small" />
                        <Label text="Monitor and update inventory levels" styleClass="caption-text" />
                        <Button text="Manage Inventory" styleClass="btn-primary" />
                    </VBox>

                    <!-- Data Reports Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/reports.png" />
                            </image>
                        </ImageView>
                        <Label text="Data Reports" styleClass="title-small" />
                        <Label text="Generate inventory and vendor reports" styleClass="caption-text" />
                        <Button text="View Reports" styleClass="btn-primary" />
                    </VBox>

                    <!-- Quick Actions Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/iconfinder-settings-4341324_120534.png" />
                            </image>
                        </ImageView>
                        <Label text="Quick Actions" styleClass="title-small" />
                        <Label text="Common data entry tasks" styleClass="caption-text" />
                        <VBox spacing="8" alignment="CENTER">
                            <Button text="Bulk Import" styleClass="btn-secondary" maxWidth="Infinity" />
                            <Button text="Data Export" styleClass="btn-secondary" maxWidth="Infinity" />
                        </VBox>
                    </VBox>
                </GridPane>

                <!-- Recent Activity Section -->
                <VBox spacing="16">
                    <Label text="Recent Activity" styleClass="title-medium" />
                    <VBox styleClass="card" spacing="12">
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <Label text="●" styleClass="success-text" />
                            <Label text="Added 15 new products to inventory" styleClass="body-text" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="2 hours ago" styleClass="caption-text" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <Label text="●" styleClass="primary-text" />
                            <Label text="Updated vendor 'ABC Suppliers' contact information" styleClass="body-text" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="4 hours ago" styleClass="caption-text" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <Label text="●" styleClass="warning-text" />
                            <Label text="Bulk import completed - 50 products added" styleClass="body-text" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="1 day ago" styleClass="caption-text" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Statistics Section -->
                <VBox spacing="16">
                    <Label text="Data Entry Statistics" styleClass="title-medium" />
                    <GridPane hgap="16" vgap="16">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
                        </columnConstraints>

                        <!-- Products Count -->
                        <VBox styleClass="card" alignment="CENTER" spacing="8" GridPane.columnIndex="0">
                            <Label text="Total Products" styleClass="caption-text" />
                            <Label text="1,247" styleClass="title-medium" />
                            <Label text="In System" styleClass="success-text" />
                        </VBox>

                        <!-- Vendors Count -->
                        <VBox styleClass="card" alignment="CENTER" spacing="8" GridPane.columnIndex="1">
                            <Label text="Active Vendors" styleClass="caption-text" />
                            <Label text="45" styleClass="title-medium" />
                            <Label text="Registered" styleClass="primary-text" />
                        </VBox>

                        <!-- Categories Count -->
                        <VBox styleClass="card" alignment="CENTER" spacing="8" GridPane.columnIndex="2">
                            <Label text="Product Categories" styleClass="caption-text" />
                            <Label text="12" styleClass="title-medium" />
                            <Label text="Available" styleClass="warning-text" />
                        </VBox>

                        <!-- Today's Entries -->
                        <VBox styleClass="card" alignment="CENTER" spacing="8" GridPane.columnIndex="3">
                            <Label text="Today's Entries" styleClass="caption-text" />
                            <Label text="23" styleClass="title-medium" />
                            <Label text="New Items" styleClass="success-text" />
                        </VBox>
                    </GridPane>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox styleClass="card" alignment="CENTER_LEFT" spacing="16" padding="12">
            <Label text="Status:" styleClass="form-label" />
            <Label text="System Ready" styleClass="success-text" style="-fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Last updated:" styleClass="caption-text" />
            <Label text="Just now" styleClass="caption-text" />
        </HBox>
    </bottom>
</BorderPane>
