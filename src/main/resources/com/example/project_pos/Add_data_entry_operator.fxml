<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"  stylesheets="@style10.css" fx:controller="controller.AddDataEntryOperator" prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20" layoutX="50.0" layoutY="50.0">
        <!-- Title Label -->
        <Label text="Add Data Entry Operator" styleClass="title-label" />

        <!-- Username -->
        <HBox spacing="10">
            <Label text="Username:" styleClass="label" />
            <TextField fx:id="usernameField" styleClass="text-field" />
        </HBox>

        <!-- Name -->
        <HBox spacing="10">
            <Label text="Name:" styleClass="label" />
            <TextField fx:id="nameField" styleClass="text-field" />
        </HBox>

        <!-- Email -->
        <HBox spacing="10">
            <Label text="Email:" styleClass="label" />
            <TextField fx:id="emailField" styleClass="text-field" />
        </HBox>

        <!-- Password -->
        <HBox spacing="10">
            <Label text="Password:" styleClass="label" />
            <PasswordField fx:id="passwordField" styleClass="text-field" />
        </HBox>

        <!-- Salary -->
        <HBox spacing="10">
            <Label text="Salary:" styleClass="label" />
            <TextField fx:id="salaryField" styleClass="text-field" />
        </HBox>

        <!-- Add Button -->
        <Button text="Add" onAction="#handleAddDataEntry" styleClass="add-button"/>
    </VBox>
</AnchorPane>