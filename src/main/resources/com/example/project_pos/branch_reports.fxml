<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@modern-ui.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BranchReports">
    <children>
        
        <!-- Header Section -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="120.0" prefWidth="1200.0" styleClass="card">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="16" styleClass="container">
                    <children>
                        <Text styleClass="title-large" text="Branch Reports & Analytics" />
                        <Text styleClass="body-text" text="Generate comprehensive reports and visualizations for branch performance" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="16" left="24" right="24" top="24" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>

        <!-- Search and Controls Section -->
        <VBox layoutX="24.0" layoutY="140.0" prefHeight="120.0" prefWidth="1152.0" styleClass="card">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="24">
                    <children>
                        <VBox spacing="8">
                            <children>
                                <Label styleClass="form-label" text="Branch Code" />
                                <TextField fx:id="branchCodeField" prefWidth="300.0" promptText="Enter branch code (e.g., BR001)" styleClass="form-field" />
                            </children>
                        </VBox>
                        
                        <VBox spacing="8">
                            <children>
                                <Label styleClass="form-label" text="Report Type" />
                                <HBox spacing="12">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#generateSalesGraph" styleClass="btn-primary" text="Sales Graph" />
                                        <Button mnemonicParsing="false" onAction="#generateSalesBarChart" styleClass="btn-secondary" text="Bar Chart" />
                                        <Button mnemonicParsing="false" onAction="#generateInventoryTable" styleClass="btn-success" text="Inventory Table" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets bottom="16" left="24" right="24" top="24" />
            </VBox.margin>
        </VBox>

        <!-- Display Area -->
        <VBox layoutX="24.0" layoutY="280.0" prefHeight="496.0" prefWidth="1152.0" styleClass="card">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <children>
                        <Text styleClass="title-small" text="Report Output" />
                        <Text styleClass="caption-text" text="Generated reports and visualizations will appear below" />
                    </children>
                </HBox>
                
                <Pane fx:id="displayPane" prefHeight="400.0" prefWidth="1104.0" styleClass="container" />
            </children>
            <VBox.margin>
                <Insets bottom="24" left="24" right="24" top="24" />
            </VBox.margin>
        </VBox>

        <!-- Status Bar -->
        <HBox layoutX="24.0" layoutY="796.0" prefHeight="40.0" prefWidth="1152.0" styleClass="gray-bg">
            <children>
                <Label styleClass="caption-text" text="Ready to generate reports" />
            </children>
            <HBox.margin>
                <Insets bottom="8" left="16" right="16" top="8" />
            </HBox.margin>
        </HBox>
        
    </children>
</AnchorPane>
