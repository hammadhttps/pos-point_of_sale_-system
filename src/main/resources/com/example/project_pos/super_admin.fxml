<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800.0" prefWidth="1400.0" 
            styleClass="container" 
            stylesheets="@modern-ui.css" 
            xmlns="http://javafx.com/javafx/17.0.12" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.SuperAdminController">

    <!-- Top Navigation Bar -->
    <top>
                 <HBox styleClass="card" alignment="CENTER_LEFT" spacing="20">
            <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                <image>
                    <Image url="@icons_and_images/pos_icon.png" />
                </image>
            </ImageView>
            <Label text="Super Admin Dashboard" styleClass="title-medium" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Logout" styleClass="btn-outline" onAction="#close" />
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox spacing="32" maxWidth="1200">
                
                <!-- Welcome Section -->
                <VBox spacing="16" alignment="CENTER">
                    <Label text="Welcome, Super Administrator" styleClass="title-large" />
                    <Label text="Manage your POS system from the central administration panel" styleClass="body-text" />
                </VBox>

                <!-- Dashboard Cards Grid -->
                <GridPane hgap="24" vgap="24" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300" prefWidth="300" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300" prefWidth="300" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300" prefWidth="300" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" minHeight="200" prefHeight="200" />
                        <RowConstraints vgrow="SOMETIMES" minHeight="200" prefHeight="200" />
                    </rowConstraints>

                    <!-- Create Branch Manager Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           onMouseClicked="#create_manager" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/add_new_vendor.png" />
                            </image>
                        </ImageView>
                        <Label text="Create Branch Manager" styleClass="title-small" />
                        <Label text="Add new branch managers to the system" styleClass="caption-text" />
                        <Button text="Create Manager" styleClass="btn-primary" onAction="#create_manager" />
                    </VBox>

                    <!-- Create Branch Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           onMouseClicked="#create_branch" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/square_14034302.png" />
                            </image>
                        </ImageView>
                        <Label text="Create Branch" styleClass="title-small" />
                        <Label text="Add new branches to the network" styleClass="caption-text" />
                        <Button text="Create Branch" styleClass="btn-primary" onAction="#create_branch" />
                    </VBox>

                    <!-- Reports Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           onMouseClicked="#reports" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/reports.png" />
                            </image>
                        </ImageView>
                        <Label text="System Reports" styleClass="title-small" />
                        <Label text="View comprehensive system analytics" styleClass="caption-text" />
                        <Button text="View Reports" styleClass="btn-primary" onAction="#reports" />
                    </VBox>

                    <!-- Edit Branch Details Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           onMouseClicked="#edit_branch" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/iconfinder-settings-4341324_120534.png" />
                            </image>
                        </ImageView>
                        <Label text="Edit Branch Details" styleClass="title-small" />
                        <Label text="Manage existing branch configurations" styleClass="caption-text" />
                        <Button text="Edit Branches" styleClass="btn-primary" onAction="#edit_branch" />
                    </VBox>

                    <!-- System Status Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/administrator-icon.png" />
                            </image>
                        </ImageView>
                        <Label text="System Status" styleClass="title-small" />
                        <Label text="Monitor system health and performance" styleClass="caption-text" />
                        <Label text="All Systems Operational" styleClass="success-text" style="-fx-font-weight: bold;" />
                    </VBox>

                    <!-- Quick Actions Card -->
                    <VBox styleClass="dashboard-card" alignment="CENTER" spacing="16" 
                           GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" styleClass="dashboard-icon">
                            <image>
                                <Image url="@icons_and_images/square_14034319.png" />
                            </image>
                        </ImageView>
                        <Label text="Quick Actions" styleClass="title-small" />
                        <Label text="Common administrative tasks" styleClass="caption-text" />
                        <VBox spacing="8" alignment="CENTER">
                            <Button text="Backup System" styleClass="btn-secondary" maxWidth="Infinity" />
                            <Button text="System Settings" styleClass="btn-secondary" maxWidth="Infinity" />
                        </VBox>
                    </VBox>
                </GridPane>

                <!-- Recent Activity Section -->
                <VBox spacing="16">
                    <Label text="Recent Activity" styleClass="title-medium" />
                    <VBox styleClass="card" spacing="12">
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <Label text="●" styleClass="success-text" />
                            <Label text="New branch 'Downtown Branch' created successfully" styleClass="body-text" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="2 hours ago" styleClass="caption-text" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <Label text="●" styleClass="primary-text" />
                            <Label text="Branch manager 'John Smith' assigned to Central Branch" styleClass="body-text" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="4 hours ago" styleClass="caption-text" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <Label text="●" styleClass="warning-text" />
                            <Label text="System backup completed successfully" styleClass="body-text" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="1 day ago" styleClass="caption-text" />
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Status Bar -->
    <bottom>
                 <HBox styleClass="card" alignment="CENTER_LEFT" spacing="16">
            <Label text="System Status:" styleClass="form-label" />
            <Label text="Online" styleClass="success-text" style="-fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Last updated:" styleClass="caption-text" />
            <Label text="Just now" styleClass="caption-text" />
        </HBox>
    </bottom>
</BorderPane>
